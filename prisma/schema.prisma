generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTENTICACIÓN (NextAuth)
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// USUARIOS
// ============================================

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String?   @unique
  emailVerified DateTime?
  password      String?   // ← Añadir esto
  displayName   String
  avatarUrl     String?
  bio           String?
  website       String?
  location      String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  platforms     PlatformConnection[]
  clips         Clip[]
  
  @@map("users")
}

// ============================================
// PLATAFORMAS CONECTADAS
// ============================================

model PlatformConnection {
  id            String   @id @default(cuid())
  userId        String
  platform      Platform
  
  // Identificadores externos
  platformUserId   String
  platformUsername String?
  
  // OAuth tokens (encriptados en producción)
  accessToken      String   @db.Text
  refreshToken     String?  @db.Text
  expiresAt        DateTime?
  
  // Metadata de la plataforma
  channelName      String?
  channelUrl       String?
  avatarUrl        String?
  
  // Estado
  isActive         Boolean  @default(true)
  lastSyncAt       DateTime?
  connectedAt      DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  clips Clip[]
  
  @@unique([userId, platform])
  @@index([userId])
  @@map("platform_connections")
}

enum Platform {
  YOUTUBE
  TWITCH
  VIMEO
  TIKTOK
  INSTAGRAM
}

// ============================================
// CLIPS
// ============================================

model Clip {
  id                String   @id @default(cuid())
  userId            String
  platformConnectionId String
  
  // Referencia externa (en la plataforma)
  platform          Platform
  externalVideoId   String
  externalUrl       String
  
  // Metadata editable por el usuario
  displayTitle      String
  description       String?
  game              String
  tags              String[]
  
  // Metadata de la plataforma (sincronizada)
  thumbnailUrl      String
  duration          Int       // segundos
  viewCount         Int       @default(0)
  likeCount         Int       @default(0)
  commentCount      Int       @default(0)
  
  // ClipDex metadata
  isFeatured        Boolean   @default(false)
  visibility        Visibility @default(PUBLIC)
  
  // Timestamps
  uploadedAt        DateTime  @default(now())
  publishedAt       DateTime? // Fecha en la plataforma original
  lastSyncAt        DateTime? // Última sincronización de stats
  updatedAt         DateTime  @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  platformConnection PlatformConnection @relation(fields: [platformConnectionId], references: [id], onDelete: Cascade)
  
  @@unique([platform, externalVideoId])
  @@index([userId])
  @@index([game])
  @@index([platform])
  @@map("clips")
}

enum Visibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

// ============================================
// JUEGOS (opcional, para normalizar)
// ============================================

model Game {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  coverUrl  String?
  igdbId    Int?     // ID de IGDB (Internet Game Database)
  
  clipCount Int      @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("games")
}